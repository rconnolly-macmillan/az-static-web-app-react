{
    "trailingSlash": "auto",
    "routes": [
        {
            "route": "/restricted*",
            "allowedRoles": [
                "authenticated"
            ]
        },
        {
            "route": "/admin*",
            "allowedRoles": [
                "admin"
            ]
        },
        {
            "route": "/login",
            "redirect": "/.auth/login/aad"
        },
        {
            "route": "/logout",
            "redirect": "/.auth/logout/aad"
        }
    ],
    "responseOverrides": {
        "401": {
            "statusCode": 302,
            "redirect": "/.auth/login/aad"
        }
    },
    "globalHeaders": {
        "Access-Control-Allow-Origin": "*",
        "Access-Control-Allow-Methods": "POST, GET, OPTIONS"
    },
    "mimeTypes": {
        ".json": "text/json"
    }
}