{
    "trailingSlash": "auto",
    "routes": [
        {
            "route": "/*",
            "allowedRoles": [
                "anonymous"
            ]
        },
        {
            "route": "/restricted*",
            "allowedRoles": [
                "authenticated"
            ]
        },
        {
            "route": "/login",
            "redirect": "/.auth/login/aad"
        },
        {
            "route": "/logout",
            "redirect": "/.auth/logout/aad"
        }
    ],
    "navigationFallback": {
        "rewrite": "error.html",
        "exclude": [
            "/images/*.{png,jpg,gif}",
            "/css/*"
        ]
    },
    "responseOverrides": {
        "401": {
            "statusCode": 302,
            "redirect": "/.auth/login/aad"
        }
    },
    "mimeTypes": {
        ".json": "text/json"
    }
}